<%= form_for(@category) do |f| %>
<div class="form-body">
    <% if @category.errors.any? %>
        <div class="row twelve column">
            <div id="error_explanation">
                <h2><%= pluralize(@category.errors.count, "error") %> prohibited this category from being saved:</h2>
                <ul>
                    <% @category.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    <% end %>
    <div class="row">
        <div class="twelve column">
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
    </div>
    <div class="row">
        <div class="twelve column">
            <%= f.label :description %>
            <%= f.text_area :description %>
        </div>
    </div>
    <div class="row">
        <div class="twelve column">
            <%= f.label :group %>
            <%= f.select(:group, options_for_select([['Project', 0], ['Article', 1]], @category.group), {include_blank: false}) %>
        </div>
    </div>
    <div class="row">
        <div class="twelve column">
            <%= f.submit %>
        </div>
    </div>
</div>
<% end %>
