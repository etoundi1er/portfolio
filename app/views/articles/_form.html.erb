<%= form_for(@article) do |f| %>
<div class="form-body">
    <% if @article.errors.any? %>
        <div class="row twelve column">
            <div id="error_explanation">
                <h2><%= pluralize(@article.errors.count, "error") %> prohibited this article from being saved:</h2>
                <ul>
                    <% @article.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                    <% end %>
                </ul>
            </div>
        </div>
    <% end %>
    <div class="row">
        <div class="twelve column">
            <%= f.label :title %>
            <%= f.text_field :title %>
        </div>
    </div>
    <div class="row">
        <div class="twelve column">
            <%= f.label :meta_keywords %>
            <%= f.text_field :keywords %>
        </div>
    </div>
    <div class="row">
        <div class="one-half column">
            <%= f.label :meta_description %>
            <%= f.text_area :description %>
        </div>
        <div class="one-half column">
            <%= f.label :excerpt %>
            <%= f.text_area :excerpt %>
        </div>
    </div>
    <div class="row">
        <div class="one-half column">
            <%= f.label :published_on %>
            <%= f.date_field :published_on, class: 'u-full-width' %>
        </div>
        <div class="one-half column">
            <%= f.label :category_id %>
            <%= f.collection_select(:category_id, Category.article_group.order("lower(title) ASC"), :id, :title,  { include_blank: "Select a category" }) %>
        </div>
    </div>
    <div class="row">
        <div class="twelve column">
            <%= f.label :content %>
            <%= f.text_area :content, :class => "tinymce" %>
        </div>
    </div>
    <div class="row">
        <div class="one-half column">
            <%= f.check_box :aside %>
            <small>Shows article as an aside</small>
        </div>
        <div class="one-half column">
            <%= f.check_box :draft %>
            <small>Article is a draft</small>
        </div>
    </div>
    <div class="row">
        <div class="twelve column">
            <%= f.submit %>
        </div>
    </div>
</div>
<% end %>

<%= tinymce %>
<%= tinymce_assets %>
