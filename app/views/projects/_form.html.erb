<div class="form-body">
  
  <%= form_for @project, html: { multipart: true } do |f| %>
    <div>
      <%= f.label :title %>
      <br>
      <%= f.text_field :title %>
    </div>
    <div>
      <%= f.label :slug %>
      <br>
      <%= f.text_field :slug %>
    </div>
    <div>
      <%= f.label :description %>
      <br>
      <%= f.text_area :description %>
    </div>
    <div>
      <%= f.label :category %>
      <br>
      <%= f.text_field :category %>
    </div>
    <div>
      <%= f.label :date %>
      <br>
      <%= f.text_field :period %>
    </div>
    <div>
      <%= f.label :content %>
      <br>
      <%= f.text_area :content, :class => "tinymce" %>
    </div>
    <div>
      <%= f.file_field :image %>
    </div>
    
    <%= f.submit %>
    
  <% end %>

</div>

<%= tinymce %>
<%= tinymce_assets %>

