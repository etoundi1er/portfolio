<% # Meta information for the <head> section %>
<% title @project.title %>
<% meta_tag :description, @project.description %>

<div class="project-desc">
    <h1><%= @project.title %></h1>
    <hr class="blue">
    <h2><%= @project.description %></h2>
    <p>
      <span class="trigger-category"><%= @project.category %></span>
      <span class="trigger-location"><%= @project.period %></span>
    </p>
    <% if logged_in? %>
      <p><%= link_to 'Edit', edit_project_path(@project) %> |  
      <%= link_to 'Destroy', @project, method: :delete, data: { confirm: 'Are you sure?' } %> | 
      <%= link_to 'Add Projects', new_project_path %> | 
      <%= link_to 'View all', projects_path %> </p>
    <% end %>
</div>

<article class="project-content">
  <%= image_tag @project.image.url %>
  <div class="project-text">
    <%= @project.content.html_safe %>
  </div>
</article>

<div class="next">
  <div class="one-half column">UP NEXT</div>
  <div class="one-half column"><%= link_to @project.next_item.title, @project.next_item, id: "next" %> </div>
</div>


<%= javascript_include_tag 'cbpFWTabs', 'data-turbolinks-track' => true %>
<script>
	new CBPFWTabs( document.getElementById( 'tabs' ) );
</script>